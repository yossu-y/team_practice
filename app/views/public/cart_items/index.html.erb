<h5>ショッピングカート</h5>

<%= link_to "カートを空にする", cart_items_all_destroy_path, method: :delete,
    class: "btn btn-danger", data: { confirm: "カートの中身を全て削除しますか？" } %>

  <table border="1" style="border-collapse: collapse">
    <thead class ="table-active center">
      <tr>
        <th width = "200" height = "50">商品名</th>
        <th width = "150">単価(税込)</th>
        <th width = "100">数量</th>
        <th width = "100">小計</th>
        <th width = "100"></th>
      </tr>
    </thead>
    <% @cart_items.each do |cart_item| %>
    <tbody>
      <tr>
        <td height = "50">
          <%= image_tag cart_item.item.image, size: "100×100" %>
          <%= cart_item.item.name %>
        </td>
        <td><%= @cart_item.add_tax_price.to_s(:delimited) %></td>
        <td>
          <%= form_with model: @cart_item, method: :patch do |f| %>
            <%= f.select :count, *[1..10] %>
            <%= f.submit :変更, class: "btn btn-success" %>
          <% end %>
        </td>
        <td><%= @cart_item.round.to_s(:delimited)%></td>
        <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>

  <div><%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %></div>
    <table border="1" style="border-collapse: collapse">
      <tr>
        <th class ="table-active" width = "90" height = "50">合計金額</th>
        <th width = "90" height = "50"><%= @total.round.to_s(:delimited)%></th>
      </tr>
    </table>
  </div>
</div>

<div class="d-flex justify-content-center">
  <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
</div>
